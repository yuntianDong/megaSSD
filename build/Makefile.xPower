LIB_NAME = xPower.so
export CC = g++
export DFLAGS = -g

export CFLAGS = -DBOOST_ALL_DYN_LINK -fPIC -O2 -W -std=c++11 #-Wall -Werror -std=c++0x
LDFLAGS = -L/usr/local/boost/lib -L/usr/lib/python3.10 -L/usr/lib64
LDFLAGS += -lboost_filesystem
LDFLAGS += -lboost_python310
LDFLAGS += -lboost_locale
LDFLAGS += -lboost_thread
LDFLAGS += -lboost_system
LDFLAGS += -lpython3.10

SUBDIRS :=		\
	../src/lib/utility	\
	../src/lib/ipc	\
	../src/lib/buffer	\
	../src/lib/serial	\
	../src/lib/power/scpiPwrCtrlr	\
	../src/lib/power/mcuPwrCtrlr	\
	../src/module/xPower	\

SUBSRCS:= $(foreach n,$(SUBDIRS) , $(wildcard $(n)/*.cpp))
	
all: GOAL=all
all: $(LIB_NAME)

clean: GOAL=clean
clean: $(SUBDIRS)
	rm -f *.o
	rm -f $(LIB_NAME)

$(SUBDIRS):
	$(MAKE) -C $@ $(GOAL)

$(LIB_NAME): $(SUBDIRS)
	$(CC) -shared -o $@ $(SUBSRCS:.cpp=.o) $(LDFLAGS) && cp $(LIB_NAME) ../bin/
	
.PHONY: all clean $(SUBDIRS)
